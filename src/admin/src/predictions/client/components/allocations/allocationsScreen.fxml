<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="allocationScreen" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="predictions.client.components.allocations.AllocationsController">
   <center>
      <TableView fx:id="allocationsTable" minHeight="70.0" minWidth="1075.0" prefWidth="1075.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" minWidth="75.0" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="simulationNameColumn" minWidth="120.0" prefWidth="120.0" text="Name" />
            <TableColumn fx:id="usernameColumn" minWidth="120.0" prefWidth="120.0" text="Username" />
            <TableColumn fx:id="requestedAmountColumn" minWidth="120.0" prefWidth="120.0" text="Requested amount" />
            <TableColumn fx:id="terminationColumn" minWidth="150.0" prefWidth="150.0" text="Termination" />
            <TableColumn fx:id="statusColumn" minWidth="100.0" prefWidth="100.0" text="Status" />
            <TableColumn fx:id="currentlyRunningColumn" minWidth="120.0" prefWidth="120.0" text="Currently running" />
            <TableColumn fx:id="finishedRunningColumn" minWidth="120.0" prefWidth="120.0" text="Finished running" />
            <TableColumn fx:id="handleColumn" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Handle" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
